<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/efefef"
    android:orientation="vertical" >
    
    
   
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="@drawable/sun1"
        android:layout_height="180dp">
        
         
        <com.example.lei.CircularImage  
        android:id="@+id/cover_user_photo"  
        android:layout_width="74.0dip"  
        android:layout_height="74.0dip" 
        android:layout_marginTop="40dp" 
      	android:layout_gravity="center"/>  
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待戈多"
        android:textColor="@color/ffffff"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffffff">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:text="0"/>
        
         <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
             android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="0"/>
          <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
             android:layout_margin="5dp"
             android:textColor="#000000"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="0"/>
           <TextView 
            android:layout_width="0dp"
             android:layout_margin="5dp"
             android:textColor="#000000"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="0"/>
        
        
        
    </LinearLayout>
    
     <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ffffff">
        
        <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="话题"/>
        
         <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="收藏"/>
          <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="关注"/>
           <TextView 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="粉丝"/>     
    </LinearLayout>
    
     <LinearLayout
         android:id="@+id/linearLayout1" 
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/sltp"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:textColor="#000000"
           android:text="我的消息"/>
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>
     
     <LinearLayout 
         android:id="@+id/linearLayout2"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/zttp"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:textColor="#000000"
           android:text="我的状态"/>
       
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="4dp"
           android:textSize="12sp"
            android:textColor="#969696"
           android:text="怀孕101天"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>
  
     
     <LinearLayout 
         android:id="@+id/linearLayout3"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/jktp"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:textColor="#000000"
           android:text="健康状况"/>
       
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>
     
     <LinearLayout 
         android:id="@+id/linearLayout4"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/yj"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:textColor="#000000"
           android:text="邀请好友"/>
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>
     
     <LinearLayout 
         android:id="@+id/linearLayout5"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="8dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/sztp"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:textColor="#000000"
           android:text="设置"/>
       
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>
     
     <LinearLayout 
         android:id="@+id/linearLayout6"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="2dp"
         android:background="@color/ffffff">
      <ImageView 
          android:layout_width="0dp"
          android:layout_weight="2"
          android:layout_margin="5dp"
          android:layout_height="wrap_content"
          android:src="@drawable/yj"/> 
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:textColor="#000000"
           android:text="意见反馈"/>
       
       <TextView 
           android:layout_width="0dp"
           android:layout_weight="3"
           android:layout_height="wrap_content"/>
       
       <ImageView 
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_margin="5dp"
           android:src="@drawable/jt1"
           android:layout_weight="2"/>
         
     </LinearLayout>


</LinearLayout>
